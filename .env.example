# HR Candidate Evaluation System - Development Environment
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Groq API Configuration (REQUIRED)
# Get your API key from: https://console.groq.com/keys
VITE_GROQ_API_KEY=your_groq_api_key_here

# API Configuration (REQUIRED)
# For development, use localhost. For production, use your domain
VITE_API_URL=http://localhost:3001/api

# PostgreSQL Configuration (REQUIRED)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hr_candidate_eval
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Server Configuration (REQUIRED)
PORT=3001
HOST=0.0.0.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Node.js Environment
NODE_ENV=development

# =============================================================================
# OPTIONAL SECURITY SETTINGS
# =============================================================================

# Session Configuration (Optional - auto-generated if not provided)
# SESSION_SECRET=your-development-session-secret

# Rate Limiting (Optional - defaults provided)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=1000  # Higher limit for development
# AUTH_RATE_LIMIT_MAX=50        # Higher limit for development

# CORS Configuration (Optional - defaults to allow all in development)
# CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# SSL Configuration (Optional - disabled by default in development)
POSTGRES_SSL=false

# Connection Pool (Optional - defaults provided)
# POSTGRES_MAX_CONNECTIONS=10
# POSTGRES_IDLE_TIMEOUT=30000
# POSTGRES_CONNECTION_TIMEOUT=2000

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Log Level (Optional - defaults to 'debug' in development)
LOG_LEVEL=debug

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features (Optional - all enabled by default)
ENABLE_VOICE_INPUT=true
ENABLE_FALLBACK_QUESTIONS=true
ENABLE_FALLBACK_EVALUATION=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Request Limits (Optional - defaults provided)
MAX_JSON_SIZE=10mb
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
DATABASE_TIMEOUT=10000

# =============================================================================
# MAINTENANCE
# =============================================================================

# Session Cleanup (Optional - defaults provided)
AUTO_CLEANUP_ENABLED=true
SESSION_CLEANUP_INTERVAL=3600000  # 1 hour

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Update VITE_GROQ_API_KEY with your actual API key
# 3. Update POSTGRES_PASSWORD with your PostgreSQL password
# 4. For production deployment, see .env.production.template
# 5. Never commit .env files to version control