# HR Candidate Evaluation System - Production Environment Template
# Copy this file to .env and fill in the actual values

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Groq API Configuration (REQUIRED)
# Get your API key from: https://console.groq.com/keys
VITE_GROQ_API_KEY=gsk_your_actual_groq_api_key_here

# API Configuration (REQUIRED)
# Use your production domain or IP address
VITE_API_URL=https://your-domain.com/api

# PostgreSQL Database Configuration (REQUIRED)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=hr_candidate_eval
POSTGRES_USER=your-postgres-user
POSTGRES_PASSWORD=your-secure-postgres-password

# Server Configuration (REQUIRED)
PORT=3001
HOST=0.0.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Node.js Environment (REQUIRED for production)
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-very-long-random-session-secret-at-least-32-characters

# Rate Limiting Configuration (Optional - defaults provided)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
AUTH_RATE_LIMIT_MAX=20       # Max auth requests per window

# CORS Configuration (Optional)
CORS_ORIGIN=https://your-frontend-domain.com

# =============================================================================
# DATABASE SECURITY
# =============================================================================

# SSL Configuration for PostgreSQL (Recommended for production)
POSTGRES_SSL=true
POSTGRES_SSL_REJECT_UNAUTHORIZED=true

# Connection Pool Configuration (Optional - defaults provided)
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log Level (Optional - defaults to 'info' in production)
LOG_LEVEL=info

# Error Reporting (Optional)
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# Health Check Configuration (Optional)
HEALTH_CHECK_ENABLED=true

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Request Size Limits (Optional - defaults provided)
MAX_JSON_SIZE=10mb
MAX_REQUEST_SIZE=50mb

# Timeout Configuration (Optional)
REQUEST_TIMEOUT=30000  # 30 seconds
DATABASE_TIMEOUT=10000 # 10 seconds

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features (Optional)
ENABLE_VOICE_INPUT=true
ENABLE_FALLBACK_QUESTIONS=true
ENABLE_FALLBACK_EVALUATION=true

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Session Cleanup Configuration (Optional)
SESSION_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds
AUTO_CLEANUP_ENABLED=true

# Database Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service Configuration (Optional - for future features)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# File Storage Configuration (Optional - for future features)
STORAGE_TYPE=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket

# =============================================================================
# DEVELOPMENT/STAGING OVERRIDES
# =============================================================================

# Uncomment for staging environment
# NODE_ENV=staging
# VITE_API_URL=https://staging-api.your-domain.com/api
# POSTGRES_DB=hr_candidate_eval_staging

# Uncomment for development environment
# NODE_ENV=development
# VITE_API_URL=http://localhost:3001/api
# POSTGRES_HOST=localhost
# POSTGRES_PASSWORD=password